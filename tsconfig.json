{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ES2022"],
    "types": ["node"],
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "bin/*.ts"
  ]
}